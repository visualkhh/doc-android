<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<EditText android:id="@+id/url" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:lines="1"
			android:layout_weight="1" android:text="http://okgosu.net" />
		<Button android:id="@+id/go_button" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:text="Search" />
	</LinearLayout>
	<WebView android:id="@+id/webkit" android:layout_width="fill_parent"
		android:layout_height="fill_parent" />
</LinearLayout>
