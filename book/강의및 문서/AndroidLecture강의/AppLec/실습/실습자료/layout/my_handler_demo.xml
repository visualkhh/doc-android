<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"  >
	<ProgressBar android:id="@+id/progress" 
	style="?android:attr/progressBarStyleHorizontal"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"/>
<TextView android:text="쓰레드데모" android:id="@+id/txt" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
<Button android:text="쓰레드시작" android:id="@+id/btn_start" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
<Button android:text="쓰레드종료" android:id="@+id/btn_stop" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>
